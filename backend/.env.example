# Database Configuration
DATABASE_URL=postgresql://backup_user:backup_password@postgres:5432/backup_db

# Redis Configuration  
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=your-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# Storage Configuration
BACKUP_STORAGE_PATH=/app/backups
DEFAULT_RETENTION_DAYS=30

# Platform Credentials (encrypt in production)
VMWARE_DEFAULT_USERNAME=administrator@vsphere.local
PROXMOX_DEFAULT_USERNAME=root
XCPNG_DEFAULT_USERNAME=root

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=8001

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/backup.log
